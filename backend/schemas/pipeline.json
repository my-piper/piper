{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Pipeline",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "propertyOrder": 1
    },
    "description": {
      "type": "string",
      "title": "Description",
      "format": "textarea",
      "propertyOrder": 2
    },
    "readme": {
      "type": "string",
      "title": "README",
      "format": "textarea"
    },
    "version": {
      "type": "number",
      "title": "Version",
      "format": "number",
      "propertyOrder": 3
    },
    "url": {
      "type": "string",
      "title": "URL",
      "propertyOrder": 4,
      "options": {
        "inputAttributes": {
          "placeholder": "URL for auto updates"
        }
      }
    },
    "checkUpdates": {
      "type": "boolean",
      "title": "Check updates",
      "propertyOrder": 5
    },
    "thumbnail": {
      "type": "string",
      "title": "Thumbnail",
      "propertyOrder": 6
    },
    "category": {
      "$ref": "#/definitions/PipelineCategory"
    },
    "start": {
      "$ref": "#/definitions/Start"
    },
    "deploy": {
      "$ref": "#/definitions/Deploy"
    },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PipelineInput"
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PipelineOutput"
      }
    },
    "flows": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/NodeFlow"
      }
    },
    "nodes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "local://node.json"
      }
    }
  },
  "required": ["name", "version", "nodes"],
  "additionalProperties": false,
  "definitions": {
    "Start": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["nodes"],
      "additionalProperties": false
    },
    "PipelineCategory": {
      "title": "Category",
      "type": "object",
      "properties": {
        "_id": {
          "title": "ID",
          "type": "string",
          "pattern": "^[a-z0-9_]{5,40}$",
          "propertyOrder": 1
        },
        "title": {
          "title": "Title",
          "type": "string",
          "propertyOrder": 2
        },
        "icon": {
          "title": "Icon",
          "type": "string",
          "propertyOrder": 3
        }
      },
      "required": ["_id", "title"],
      "additionalProperties": false
    },
    "Deploy": {
      "title": "Deploy",
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9\\-_]{5,40}$"
        },
        "scope": {
          "title": "Scope",
          "type": "object",
          "properties": {
            "id": {
              "title": "ID",
              "type": "string",
              "pattern": "^[a-z0-9_]{5,40}$"
            },
            "maxConcurrent": {
              "title": "Max concurrent",
              "type": "number"
            }
          },
          "required": ["id", "maxConcurrent"],
          "additionalProperties": false
        }
      },
      "required": ["slug", "scope"],
      "additionalProperties": false
    },
    "NodeFlow": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "input": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "mode": {
          "type": "string",
          "enum": ["wait", "move"]
        }
      },
      "required": ["from", "output", "to", "input"],
      "additionalProperties": false
    },
    "InputFlow": {
      "type": "object",
      "properties": {
        "to": {
          "type": "string"
        },
        "input": {
          "type": "string"
        }
      },
      "required": ["to", "input"],
      "additionalProperties": false
    },
    "OutputFlow": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string"
        },
        "output": {
          "type": "string"
        }
      },
      "required": ["from", "output"],
      "additionalProperties": false
    },
    "PipelineInput": {
      "type": "object",
      "properties": {
        "order": {
          "type": "number"
        },
        "type": {
          "type": "string",
          "enum": [
            "boolean",
            "integer",
            "float",
            "string",
            "image",
            "image[]",
            "video",
            "json"
          ]
        },
        "description": {
          "title": "Description",
          "type": "string",
          "format": "textarea"
        },
        "icon": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "arrange": {
          "$ref": "local://arrange.json"
        },
        "required": {
          "type": "boolean"
        },
        "enum": {
          "title": "Enum",
          "type": "array",
          "items": {
            "type": ["boolean", "integer", "string"]
          }
        },
        "freeform": {
          "type": "boolean"
        },
        "multiline": {
          "type": "boolean"
        },
        "min": {
          "title": "Min",
          "type": "number"
        },
        "max": {
          "title": "Max",
          "type": "number"
        },
        "step": {
          "title": "Step",
          "type": "number"
        },
        "default": {
          "type": ["boolean", "number", "string"]
        },
        "extensions": {
          "type": "array",
          "items": {
            "$ref": "local://input-extension.json"
          }
        },
        "flows": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/InputFlow"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "PipelineOutput": {
      "type": "object",
      "properties": {
        "order": {
          "title": "Order",
          "type": "number"
        },
        "title": {
          "type": "string"
        },
        "arrange": {
          "$ref": "local://arrange.json"
        },
        "type": {
          "type": "string",
          "enum": [
            "boolean",
            "integer",
            "float",
            "string",
            "image",
            "image[]",
            "video",
            "json"
          ]
        },
        "multiline": {
          "type": "boolean"
        },
        "flows": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/OutputFlow"
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
